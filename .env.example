# Production Environment Variables

# Supabase Configuration (Production)
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your_production_anon_key_here

# JWT Secret (MUST be changed for production!)
JWT_SECRET=your-super-secure-jwt-secret-with-at-least-32-characters

# Database Configuration
POSTGRES_DB=supabase
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_database_password
POSTGRES_PORT=5432

# API Ports (adjust if needed)
AUTH_PORT=54321
REST_PORT=54320

# Site Configuration
SITE_URL=https://yourdomain.com
URI_ALLOW_LIST=https://yourdomain.com,https://www.yourdomain.com

# Auth Configuration
DISABLE_SIGNUP=true
ADMIN_EMAIL=admin@yourdomain.com

# SMTP Configuration (for auth emails)
SMTP_HOST=smtp.yourmailprovider.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password